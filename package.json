{
  "name": "typescript_starter_kit",
  "version": "1.0.0",
  "description": "typescript starter pack",
  "authors": ["Rishi Jung Ranabhat <ranabhat.85@gmail.com>"],
  "license": "MIT",
  "private": true,
  "keywords": [
    "api",
    "starter",
    "es6",
    "node",
    "express",
    "javascript",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts, js}": [
      "prettier --write",
      "tslint --fix -c tslint.json 'src/**/*.{ts,js}'; exit 0",
      "git add"
    ]
  },
  "scripts": {
    "transpile": "tsc",
    "clean": "rimraf build",
    "watch": "tsc --watch",
    "format": "prettier --write 'src/**/*.ts'",
    "start": "nodemon --watch src src/index.ts",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,js}'; exit 0",
    "lint:fix": "tslint --fix -c tslint.json 'src/**/*.ts'; exit 0",
    "serve": "node build/src/index.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/helmet": "^0.0.45",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.1.7",
    "@types/winston": "^2.4.4",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
