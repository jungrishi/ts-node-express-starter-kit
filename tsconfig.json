{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./build",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018"],

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
